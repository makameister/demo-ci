{
    "name": "maka/demo-ci",
    "description": "Projet de demo pour la mise en place du chaine d'integration continue",
    "autoload":{
        "psr-4": {
            "Framework\\": "src/Framework",
            "App\\": "src/App"
        }
    },
    "autoload-dev":{
        "psr-4": {
            "Test\\": "test"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "nexus-push": [{
            "name": "prod",
            "url": "http://localhost:8082/repository/php-dev",
            "username": "jenkins",
            "password": "jenkins",
            "ignore-by-git-attributes": true,
            "ignore": [
                "test/"
            ]
        }, {
            "name": "dev",
            "url": "http://localhost:8082/repository/php-dev",
            "username": "jenkins",
            "password": "jenkins",
            "ignore-by-git-attributes": true,
            "ignore": [
                "test/"
            ]
        }]
    },
    "require": {
        "guzzlehttp/guzzle": "^7.2",
        "guzzlehttp/psr7": "^1.7",
        "altorouter/altorouter": "2.0.1"
    },
    "require-dev": {
        "filp/whoops": "^2.7",
        "phpunit/phpunit": "^9.1",
        "phpunit/php-code-coverage": "^9.2",
        "phpunit/php-timer": "^5.0.3",
        "spatie/phpunit-watcher": "^1.22",
        "phpstan/phpstan": "^0.12.52",
        "squizlabs/php_codesniffer": "^3.5",
        "mockery/mockery": "^1.4",
        "phpspec/prophecy-phpunit": "^2.0",
        "phploc/phploc": "^7.0",
        "sebastian/phpcpd": "^6.0",
        "pdepend/pdepend": "^2.8",
        "phpmd/phpmd": "^2.9",
        "elendev/nexus-composer-push": "0.4.1"
    }
}
